{
  "name": "open-mercato",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "modules:entities": "tsx scripts/generate-module-entities.ts",
    "modules:di": "tsx scripts/generate-module-di.ts",
    "modules:ids": "tsx scripts/generate-entity-ids.ts",
    "modules:prepare": "tsx scripts/generate-entity-ids.ts && tsx scripts/generate-module-registry.ts && tsx scripts/generate-module-entities.ts && tsx scripts/generate-module-di.ts",
    "dev": "next dev --turbopack",
    "predev": "npm run modules:prepare",
    "build": "next build --turbopack",
    "build:packages": "tsc -p packages/core/tsconfig.build.json && tsc -p packages/example/tsconfig.build.json && tsc -p packages/cli/tsconfig.build.json",
    "start": "next start",
    "lint": "eslint",
    "modules:generate": "tsx scripts/generate-module-registry.ts",
    "prebuild": "npm run modules:prepare",
    "db:generate": "tsx scripts/mikro-modules.ts generate",
    "db:migrate": "npm run modules:prepare && tsx scripts/mikro-modules.ts apply && tsx packages/cli/src/bin.ts custom_fields install --global",
    "db:custom_fields:install": "tsx packages/cli/src/bin.ts custom_fields install",
    "premercato": "npm run modules:prepare",
    "mercato": "tsx packages/cli/src/bin.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.3.7",
    "@mikro-orm/migrations": "^6.3.7",
    "@mikro-orm/postgresql": "^6.3.7",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.3",
    "awilix": "^8.0.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.543.0",
    "next": "15.5.2",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-email": "^4.2.11",
    "resend": "^6.0.3",
    "tailwind-merge": "^3.3.1",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-table": "^8.20.5",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.12"
  }
}
