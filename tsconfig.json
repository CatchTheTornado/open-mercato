{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./packages/shared/src/lib/*"],
      "@/types/*": ["./packages/shared/src/types/*"],
      "@mercato-core/*": ["./packages/core/src/*"],
      "@mercato-example/*": ["./packages/example/src/*"],
      "@mercato-cli/*": ["./packages/cli/src/*"],
      "@mercato-events/*": ["./packages/events/src/*"],
      "@mercato-shared/*": ["./packages/shared/src/*"],
      "@mercato-ui": ["./packages/ui/src/index.ts"],
      "@mercato-ui/*": ["./packages/ui/src/*"],
      "@/modules/registry": ["./packages/shared/src/modules/registry.ts"]
      ,"@/generated/*": ["./generated/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
